<!DOCTYPE html>
<html>
  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/user_header.ejs') %>
    <section class="slider_section">
      <div class="slider_bg_box">
        <img src="/uploads/slider-bg.jpg" alt="" />
      </div>
      <div id="customCarousel1" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="container">
              <div class="row">
                <div class="col-md-7 col-lg-6">
                  <div class="detail-box">
                    <h1>
                      <span> Sale 20% Off </span>
                      <br />
                      On Everything
                    </h1>
                    <p>
                      You can take advantage of this discount by ordering a special 20% discount for the New Year
                    </p>
                    <div class="btn-box">
                      <a href="/user_sign/user_account/product/<%= data2.id %>" class="btn1"> Shop Now </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="container">
              <div class="row">
                <div class="col-md-7 col-lg-6">
                  <div class="detail-box">
                    <h1>
                      <span> Sale 40% Off </span>
                      <br />
                      On Everything
                    </h1>
                    <p>
                      You can take advantage of this discount by ordering a special 40% discount for the New Year
                    </p>
                    <div class="btn-box">
                      <a href="/user_sign/user_account/product/<%= data2.id %>" class="btn1"> Shop Now </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="container">
              <div class="row">
                <div class="col-md-7 col-lg-6">
                  <div class="detail-box">
                    <h1>
                      <span> Sale 60% Off </span>
                      <br />
                      On Everything
                    </h1>
                    <p>
                      You can take advantage of this discount by ordering a special 60% discount for the New Year
                    </p>
                    <div class="btn-box">
                      <a href="/user_sign/user_account/product/<%= data2.id %>" class="btn1"> Shop Now </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="container">
          <ol class="carousel-indicators">
            <li
              data-target="#customCarousel1"
              data-slide-to="0"
              class="active"
            ></li>
            <li data-target="#customCarousel1" data-slide-to="1"></li>
            <li data-target="#customCarousel1" data-slide-to="2"></li>
          </ol>
        </div>
      </div>
    </section>
    <section class="product_section layout_padding">
      <div class="container">
        <div class="heading_container heading_center">
          <h2>Our <span>products</span></h2>
        </div>
        <div class="row">
          <%for(let item of data_product){%>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="box">
              <div class="option_container">
                <div class="options">
                  <a
                    href="/user_sign/user_account/addtocart/<%=data2.id%>"
                    class="option1"
                    >Add To Cart</a
                  >
                  <a
                    href="/user_sign/user_account/order/<%= data2.id %>/<%= item.id %>"
                    class="option2"
                  >
                    To Order
                  </a>
                </div>
              </div>
              <div class="img-box">
                <img src="/<%= item.file %>" alt="" />
              </div>
              <div class="detail-box">
                <h6><%= item.name %></h6>
                <h6><%= item.price %></h6>
              </div>
            </div>
          </div>

          <%}%>
        </div>
        <div class="btn-box">
          <a href=""> View All products </a>
        </div>
      </div>
    </section>
    <%- include('partials/footer1.ejs') %>
    <script>
      const inp = document.querySelector(".searching");
      inp.style.display = "none";
      const btn = document.getElementById("srching");
      btn.addEventListener("click", (e) => {
        if (inp.style.display == "none") {
          inp.style.display = "block";
        } else {
          inp.style.display = "none";
        }
      });
    </script>
    <script src="/public/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="/public/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="/public/js/bootstrap.js"></script>
    <!-- custom js -->
    <script src="/public/js/custom.js"></script>
  </body>
</html>
